ErrorDocument 404 /404.html
ErrorDocument 403 /403.html
ErrorDocument 500 /500.html
ErrorDocument 503 /503.html

RewriteEngine On

# Serve extensionless URLs for existing .html files
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+)$ $1.html [L]

# Basic security headers (safe defaults for a static site)
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=(), fullscreen=(self)"
  Header set Content-Security-Policy "default-src 'self'; base-uri 'self'; form-action 'self'; frame-ancestors 'self'; object-src 'none'; script-src 'self' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://cdn.bsky.app; font-src 'self'; connect-src 'self' https://public.api.bsky.app https://video.bsky.app; frame-src 'self'; worker-src 'self' blob:; media-src 'self' https://video.bsky.app;"

  # Unity WebGL Brotli (.br) support
  <FilesMatch "\.js\.br$">
    Header set Content-Encoding br
    Header set Content-Type "application/javascript; charset=UTF-8"
  </FilesMatch>
  <FilesMatch "\.data\.br$">
    Header set Content-Encoding br
    Header set Content-Type "application/octet-stream"
  </FilesMatch>
  <FilesMatch "\.wasm\.br$">
    Header set Content-Encoding br
    Header set Content-Type "application/wasm"
  </FilesMatch>
  <FilesMatch "\.framework\.js\.br$">
    Header set Content-Encoding br
    Header set Content-Type "application/javascript; charset=UTF-8"
  </FilesMatch>
</IfModule>
